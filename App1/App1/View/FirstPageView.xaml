<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.View.FirstPageView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Primera Pagina" HorizontalTextAlignment="Center" FontSize="30" />
            <Label Text="Nombre" FontSize="25" />
            <Entry x:Name="CampoParaNombre" Placeholder="introduzca su nombre" FontSize="20"/>
            <Label Text="Apellido" FontSize="25" />
            <Entry x:Name="CampoParaNombreApellido" Placeholder="introduzca su apellido" FontSize="20" />
            <Button x:Name="Button1" Text="Go" CornerRadius="50" Margin="10,0,10,0" Clicked="Button1_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>